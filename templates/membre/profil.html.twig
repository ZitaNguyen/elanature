{% extends "layout.html.twig" %}

{% block title %}
    Inscription
{% endblock %}

{% block content %}

    <div class="container modification">
        <div class="row">

            <h2>Mon Profil</h2>

            {{ form_start( form, { attr: {novalidate: 'novalidate' } } ) }}

            <div class="col-6">
                {{ form_row(form.prenom) }}
            </div>

            <div class="col-6">
                {{ form_row{form.nom} }}
            </div>

            <div class="col-6">
                {{ form_row{form.email} }}
            </div>

            <div class="col-6">
                {{ form_row{form.password} }}
            </div>

            <div class="col-4">
                {{ form_row{form.adresse} }}
            </div>

            <div class="col-4">
                {{ form_row{form.cp} }}
            </div>

            <div class="col-4">
                {{ form_row{form.ville} }}
            </div>

            <div class="col-12">
                {{ form_row{form.submit} }}
            </div>

            <div class="col-12">
                {{ form_row{form.supprimer} }}
            </div>

            {{ form_end{form} }}

        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}