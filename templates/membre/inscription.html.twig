{% extends "layout.html.twig" %}

{% block title %}
    Inscription
{% endblock %}

{% block content %}

        <div class="container inscription">
            <div class="row">

                    <h2>Inscription</h2>

                    {{ form( form, { attr: {novalidate: 'novalidate' } } ) }}


            </div>
        </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            $('form').change(function() {
                var zipCode = $('#cp').val(),
                    link = 'https://geo.api.gouv.fr/communes?codePostal=' + zipCode;
                $.getJSON(link, function (data) {
                    // console.log(data);
                    $('#ville').val(`${data.nom}`);
                }); // end $.getJSON
            });
        }); // end $(function () {})
    </script>
{% endblock %}